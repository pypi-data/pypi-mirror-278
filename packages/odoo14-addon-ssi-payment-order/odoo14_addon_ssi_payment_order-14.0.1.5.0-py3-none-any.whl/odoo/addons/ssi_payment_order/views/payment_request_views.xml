<odoo>
<record id="payment_request_view_tree" model="ir.ui.view">
    <field name="name">payment_request - Tree</field>
    <field name="model">payment_request</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="field[@name='company_id']" position="after">
                <field name="payment_order_id" optional="hide" />
                <field name="batch_payment_request_id" optional="hide" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="type_id" />
                <field name="date" />
                <field name="move_line_id" />
                <field name="account_id" optional="hide" />
                <field name="analytic_account_id" optional="hide" />
                <field name="currency_id" optional="hide" />
                <field name="amount_payment" sum="Total Payment" />
                <field name="partner_bank_id" />
                <field name="bank_id" optional="hide" />
            </xpath>
        </data>
    </field>
</record>

<record id="payment_request_view_search" model="ir.ui.view">
    <field name="name">payment_request - Search</field>
    <field name="model">payment_request</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='state']" position="after">
                <field name="payment_order_id" />
                <field name="batch_payment_request_id" />
                <field name="partner_id" />
                <field name="type_id" />
                <field name="date" />
                <field name="move_line_id" />
                <field name="account_id" />
                <field name="analytic_account_id" />
                <field name="currency_id" />
                <field name="partner_bank_id" />
                <field name="bank_id" />
            </xpath>
            <xpath expr="//filter[@name='dom_my_data']" position="after">
                <filter string="Date" name="filter_date" date="date" />
            </xpath>
            <xpath expr="//filter[@name='grp_state']" position="after">
                <filter
                        name="grp_payment_order"
                        string="# Payment Order"
                        context="{'group_by':'payment_order_id'}"
                    />
                <filter
                        name="grp_batch_payment_request"
                        string="# Batch Payment Request"
                        context="{'group_by':'batch_payment_request_id'}"
                    />
                <filter
                        name="grp_partner"
                        string="Partner"
                        context="{'group_by':'partner_id'}"
                    />
                <filter
                        name="grp_type"
                        string="Type"
                        context="{'group_by':'type_id'}"
                    />
                <filter name="grp_date" string="Date" context="{'group_by':'date'}" />
                <filter
                        name="grp_aml"
                        string="Journal Item"
                        context="{'group_by':'move_line_id'}"
                    />
                <filter
                        name="grp_account"
                        string="Account"
                        context="{'group_by':'account_id'}"
                    />
                <filter
                        name="grp_analytic_account"
                        string="Analytic Account"
                        context="{'group_by':'analytic_account_id'}"
                    />
                <filter
                        name="grp_currency"
                        string="Currency"
                        context="{'group_by':'currency_id'}"
                    />
                <filter
                        name="grp_bank_account"
                        string="Bank Account"
                        context="{'group_by':'partner_bank_id'}"
                    />
                <filter
                        name="grp_bank"
                        string="Bank"
                        context="{'group_by':'bank_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="payment_request_view_form" model="ir.ui.view">
    <field name="name">payment_request - Form</field>
    <field name="model">payment_request</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="type_id" />
                <field
                        name="allowed_partner_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="partner_id" domain="[('id','in',allowed_partner_ids)]" />
                <field name="batch_payment_request_id" />
                <field name="payment_order_id" />
                <field name="payment_order_status" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
                <field
                        name="allowed_account_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="allowed_journal_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="allowed_currency_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <separator name="aml" string="Journal Item" />
                <field
                        name="move_line_id"
                        domain="[('account_id','in',allowed_account_ids),('partner_id','=',partner_id),('journal_id','in',allowed_journal_ids),('currency_id','in',allowed_currency_ids),('credit','>',0.0),('full_reconcile_id','=',False)]"
                    />
                <field name="account_id" />
                <field name="analytic_account_id" />
                <separator name="amount" string="Amount" />
                <field name="currency_id" />
                <field name="amount_payment" />
                <separator name="payment_to" string="Payment To" />
                <field
                        name="partner_bank_id"
                        domain="[('partner_id','=',partner_id)]"
                    />
                <field name="bank_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="payment_request_action" model="ir.actions.act_window">
    <field name="name">Payment Requests</field>
    <field name="res_model">payment_request</field>
    <field name="view_mode">tree,form</field>
</record>


<menuitem
        id="payment_request_menu"
        name="Payment Requests"
        parent="ssi_financial_accounting.menu_bank_cash"
        groups="payment_request_viewer_group"
        action="payment_request_action"
        sequence="220"
    />
</odoo>
