<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Import partners wizard form -->
    <record id="view_import_invoice" model="ir.ui.view">
        <field name="name">import.invoice.form</field>
        <field name="model">import.invoice</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Import invoice">
                <group colspan="4" col="4">
                    <field name="name"/>
                    <field name="delimeter"/>
                    <field name="company_id"/>
                    <field name="data" filename="name" colspan="4" />
                </group>
                <footer>
                    <button name="action_import" string="Import" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_invoice" model="ir.actions.act_window">
        <field name="name">Import invoices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_invoice"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_definition_import_invoice" sequence="95"
    parent="account.menu_finance_configuration" action="action_import_invoice"/>

</odoo>
