<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Import account move line wizard form -->
    <record id="view_import_account_move_line" model="ir.ui.view">
        <field name="name">import.account.move.line.form</field>
        <field name="model">import.account.move.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Import moves">
                <group colspan="4" col="4">
                    <field name="name" />
                    <field name="delimeter"/>
                    <field name="company_id"/>
                </group>
                <group>
                    <field name="data" filename="name"/>
                </group>
                <separator colspan="4"/>
                <footer>
                    <button name="action_import" string="Import" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_account_move_line" model="ir.actions.act_window">
        <field name="name">Import account move lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.account.move.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_account_move_line"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_definition_import_account_move_line" sequence="98"
    parent="account.menu_finance_configuration" action="action_import_account_move_line"/>

</odoo>
